header.header 
    nav.nav.nav--tours
        a.nav__el(href='/') All tours
    .header__logo
        img(src='/img/logo-white.png' alt='Natours logo')

    nav.nav.nav--user 
        if user
            a.nav__el.nav__el--logout Log out
            //- Not using this because we have to deal with a protected route and we'll need to intercept the errors with axios to determine if it requires a refresh token implementation
            //- a.nav__el(href='/me')
            a.nav__el.nav__el--me
                img.nav__user-img(src=`/img/users/${user.photo}` alt=`Photo of ${user.name}`)
                span= user.name.split(' ')[0]
        else
            a.nav__el(href=`/login`) Log in
            a.nav__el.nav__el--cta(href='/signup') Sign up